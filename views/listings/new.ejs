<h1>Create a listing</h1>

<form action="/listings" method="POST">
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="address" required>
  </div>

  <div class="form-group">
    <label for="city">City</label>
    <textarea type="text" class="form-control" id="city" name="city" required></textarea>
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <textarea type="text" class="form-control" id="state" name="state" required></textarea>
  </div>

  <div class="form-group">
    <label for="price">Expected price</label>
    <textarea type="text" class="form-control" id="price" name="price" required></textarea>
  </div>

  <div class="form-group">
    <label for="curl">Image URL</label>
    <textarea type="text" class="form-control" id="url" name="url" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
